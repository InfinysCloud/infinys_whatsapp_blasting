<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Cron job -->
        <record id="ir_cron_send_whatsapp_blasting" model="ir.cron">
            <field name="name">Infinys Whatsapp Blasting : Scheduler Send</field>
            <field name="model_id" ref="model_infinys_whatsapp_mailing"/>
            <field name="state">code</field>
            <field name="code">model._send_whatsapp_blasting()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="active" eval="True"/>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
        </record>
    </data>
    <data noupdate="1">
        <!-- Cron job -->
        <record id="ir_cron_send_whatsapp_enqueue" model="ir.cron">
            <field name="name">Infinys Whatsapp Blasting : Scheduler Enqueue</field>
            <field name="model_id" ref="model_infinys_whatsapp_mailing"/>
            <field name="state">code</field>
            <field name="code">model._execute_enqueue()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="active" eval="False"/>
            <field name="interval_number">2</field>
            <field name="interval_type">minutes</field>
        </record>
    </data>
</odoo>