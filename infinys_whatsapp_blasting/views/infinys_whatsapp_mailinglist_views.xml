<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_infinys_whatsapp_mailinglist_form" model="ir.ui.view">
            <field name="name">infinys.whatsapp.mailinglist.form</field>
            <field name="model">infinys.whatsapp.mailinglist</field>
            <field name="arch" type="xml">
                <form string="Mailing List">
                    <field name="id" invisible="1"/>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Mailing List Name"/>
                            <h1>
                                <field class="text-break" name="name" placeholder="e.g. Newsletter, Promo, VIP Customers"/>
                            </h1>
                        </div>
                        <group>
                            <field name="description" placeholder="Enter Description"/>
                            <field name="status" widget="selection" string="Status" />
                        </group>
                        <!-- The notebook creates the tabbed section -->
                    <notebook>
                         <page string="Contact Lists" name="contact_lists">
                            <field name="contact_ids"  options="{'no_create': True, 'no_open': True}" placeholder="Select Contacts">
                                <list string="Contacts Lists">
                                    <field name="name"/>
                                    <field name="title_id"/>
                                    <field name="whatsapp_number"/>
                                    <field name="job_position"/>
                                    <field name="company_name"/>
                                    <field name="tags_id" widget="many2many_tags"/>
                                    <field name="total_messages_sent" string="Messages Sent" readonly="1"/>
                                    <field name="total_received_messages" string="Received Messages" readonly="1"/>
                                    <field name="is_active" widget="boolean_toggle" string="Active" readonly="1" />
                                </list>
                            </field>
                            
                         </page>
                      </notebook>   
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_infinys_whatsapp_mailinglist_list" model="ir.ui.view">
            <field name="name">view.infinys.whatsapp.mailinglist.list</field>
            <field name="model">infinys.whatsapp.mailinglist</field>
            <field name="arch" type="xml">
                <list string="Mailing Lists">
                    <field name="name"/>
                    <field name="description"/>
                     <field name="status_colored" widget="html" />
                    <field name="total_contacts" string="Total Contacts" readonly="1"/> 
                    <field name="create_date"/>
                    <field name="write_date"/>
                </list>
            </field>
        </record>

        <record id="action_infinys_whatsapp_mailinglist" model="ir.actions.act_window">
            <field name="name">Mailing Lists</field>
            <field name="res_model">infinys.whatsapp.mailinglist</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>

