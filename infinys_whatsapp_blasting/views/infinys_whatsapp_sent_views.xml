<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_infinys_whatsapp_sent_form" model="ir.ui.view">
            <field name="name">infinys.whatsapp.sent.form</field>
            <field name="model">infinys.whatsapp.sent</field>
            <field name="arch" type="xml">
                <form string="Whatsppp Sent Detail" create="false" edit="false">
                    <sheet>
                        <group>
                            <field name="id" invisible="1"/>
                            <field name="create_date" string="Received At"/>
                            <field name="contact_id"/>
                            <field name="name" string="From" readonly="1"/>
                            <field name="from_number" readonly="1" />
                            <field name="mailing_id"/>   
                            <field name="hasmedia" readonly="1" />
                            <field name="mime_type" readonly="1" />
                            <field name="body" string="Message" widget="text"/>
                            <field name="json_message" string="JSON Message" widget="text"/>
                            <field name="error_msg" string="Error Message" readonly="1"/>
                        </group>    
                   </sheet>
                </form>
            </field>
        </record>
     
        <record id="view_infinys_whatsapp_sent_list" model="ir.ui.view">
            <field name="name">view.infinys.whatsapp.sent.list</field>
            <field name="model">infinys.whatsapp.sent</field>
            <field name="arch" type="xml">
                <list string="Whatsapp Sent">
                    <field name="create_date" string="Received At"/> 
                    <field name="contact_id"/>
                    <field name="to_number" />   
                    <field name="mailing_id"/>
                    <field name="mailing_list_id"/>
                    <field name="is_queued" string="Queued"/>
                    <field name="error_msg" string="Error Message" readonly="1"/>
                    <field name="body" string="Message" widget="text" optional="1"/>
                    <field name="json_message" string="JSON Message" widget="text" optional="1"/>
                </list>
            </field>
        </record>

        <record id="action_infinys_whatsapp_sent_kanban" model="ir.ui.view">
            <field name="name">view.infinys.whatsapp.sent.kanban</field>
            <field name="model">infinys.whatsapp.sent</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column" default_group_by="order_month" default_order="order_month asc, order_date asc" create="true" delete="true">
                    <field name="name"/>
                    <field name="order_date"/>
                    <field name="order_month"/>  
                        <templates>
                            <t t-name="kanban-box">
                                <div t-attf-class="oe_kanban_global_click o_kanban_record {{ record.order_month.raw_value }}">
                                    <div class="o_kanban_details">
                                        <span>Received Date : <field name="create_date"/></span><br/>
                                        <strong><field name="name"/></strong><br/>
                                        <span>To Number : <field name="to_number" readonly="1" /></span><br/>
                                        <span>Mailing : <field name="mailing_id"  readonly="1"/></span><br/> 
                                        <span>Is Queued : <field name="is_queued" readonly="1" /></span><br/>
                                     
                                    </div>
                                </div>
                            </t>
                        </templates>
                </kanban>
            </field>
        </record>

        <record id="action_infinys_whatsapp_sent" model="ir.actions.act_window">
            <field name="name">Whatsapp Sent</field>
            <field name="res_model">infinys.whatsapp.sent</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="context">{'kanban_order': 'order_month asc'}</field>
            <field name="context">{'group_by':['order_month','order_date']}</field>
        </record>

    </data>
</odoo>

