<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_infinys_whatsapp_incoming_form" model="ir.ui.view">
            <field name="name">infinys.whatsapp.incoming.form</field>
            <field name="model">infinys.whatsapp.incoming</field>
            <field name="arch" type="xml">
                <form string="Whatsppp Incoming Detail" create="false" edit="true">
                    <field name="id" invisible="1"/>
                    <header>
                            <button name="btn_reply_queue_message" string="Reply Message" type="object" class="btn-primary"/>
                    </header>    
                    <sheet>
                        <group name="Detail">
                            <group>
                                <field name="create_date" string="Received At"/> 
                                <field name="contact_id"/>
                                <field name="quotedMsgId" string="Quoted Message ID" readonly="1"/>
                                <field name="name" string="From" readonly="1"/>
                                <field name="from_number" readonly="1" />   
                                <field name="to_number" readonly="1" />
                            </group>
                            <group>        
                                <field name="raw_data" string="Raw Data" widget="text" readonly="1"/>
                                <field name="body" string="Message" widget="text" readonly="1"/>
                            </group>
                        </group>    
                        <group name="ReplyTo" string="Reply To">
                            <field name="reply_message" string="Reply Message" widget="html" placeholder="Reply Message" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
     
        <record id="view_infinys_whatsapp_incoming_list" model="ir.ui.view">
            <field name="name">view.infinys.whatsapp.incoming.list</field>
            <field name="model">infinys.whatsapp.incoming</field>
            <field name="arch" type="xml">
                <list string="Whatsapp Incoming" decoration-success="create_date &gt;= context_today() and create_date &lt; context_today()">
                    <field name="create_date" string="Received At"/> 
                    <field name="name" string="From"/>
                    <field name="from_number" />   
                    <field name="to_number"/>
                    <field name="body" string="Message" widget="text"/>
                    <field name="mime_type" optional="1"/>
                    <field name="quotedMsgId" string="Quoted Message ID" optional="1"/>
                </list>
            </field>
        </record>

        <record id="action_infinys_whatsapp_incoming_kanban" model="ir.ui.view">
            <field name="name">view.infinys.whatsapp.incoming.kanban</field>
            <field name="model">infinys.whatsapp.incoming</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column" default_group_by="order_month" default_order="order_month asc, order_date asc" create="true" delete="true">
                    <field name="name"/>
                    <field name="order_date"/>
                    <field name="order_month"/>  
                        <templates>
                            <t t-name="kanban-box">
                                <div t-attf-class="oe_kanban_global_click o_kanban_record {{ record.order_month.raw_value }}">
                                    <div class="o_kanban_details">
                                        <span>Received Date : <field name="create_date"/></span><br/>
                                        <strong><field name="name"/></strong><br/>
                                        <span>From Number : <field name="from_number" readonly="1" /></span><br/>
                                        <span>To Number : <field name="to_number" readonly="1" /></span><br/>
                                       
                                    </div>
                                </div>
                            </t>
                        </templates>
                </kanban>
            </field>
        </record>

        <record id="action_infinys_whatsapp_incoming" model="ir.actions.act_window">
            <field name="name">Whatsapp Incoming</field>
            <field name="res_model">infinys.whatsapp.incoming</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="context">{'kanban_order': 'order_month asc'}</field>
            <field name="context">{'group_by':['order_month','order_date']}</field>
        </record>

    </data>
</odoo>

